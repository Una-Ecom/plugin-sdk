{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "incremental": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.{ts,tsx}",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.json"
  ]
}